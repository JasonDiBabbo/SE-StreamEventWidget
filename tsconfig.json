{
    "compilerOptions": {
        "target": "ES2020",
        "outDir": "./dist/",
        "module": "ESNext",
        "noImplicitAny": false,
        "moduleResolution": "Node",
        "baseUrl": "./src",
        "paths": {
            "@components": [
                "components"
            ],
            "@models": [
                "models"
            ],
            "@utilities": [
                "utilities"
            ]
        }
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}